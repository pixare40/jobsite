<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
</head>
<body ng-app="app">
    @Html.Partial("~/Views/Shared/_Topbar.cshtml")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Job Mtaani</p>
        </footer>
    </div>


    <script>
        window.JobMtaani = {};
        (function (jm) {
            var rootPath;
            jm.rootPath = rootPath;
        }(window.JobMtaani));
        JobMtaani.rootPath = '@Url.Content("~")';
    </script>

    <!--Library Scripts-->
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-resource.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>

    <!--Application Script-->
    <script src="~/app/app.module.js"></script>

    <!--Module Scripts-->
    <script src="~/app/services/services.module.js"></script>
    <script src="~/app/ads/ads.module.js"></script>
    <script src="~/app/home/home.module.js"></script>

    <!--Domain Classes-->
    <script src="~/app/ads/ad.js"></script>

    <!--Services Scripts-->
    <script src="~/app/services/adService.js"></script>

    <!--Controller Scripts-->
    <script src="~/app/home/homeController.js"></script>
    <script src="~/app/ads/adsController.js"></script>

    <!--Other Scripts-->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
